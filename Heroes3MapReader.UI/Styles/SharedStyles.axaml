<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Compact Expander Style - Removes borders and extra padding for a cleaner look -->
    <Style Selector="Expander.compact /template/ ToggleButton#ExpanderHeader">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Expander.compact:down /template/ Border#ExpanderContent">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
</Styles>
