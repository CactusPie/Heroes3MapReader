<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Heroes3MapReader.UI.ViewModels"
        xmlns:converters="clr-namespace:Heroes3MapReader.UI.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="Heroes3MapReader.UI.Views.SpellSelectionWindow"
        x:DataType="vm:SpellSelectionWindowViewModel"
        Title="Select Spells"
        Width="500"
        Height="600"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <Design.DataContext>
        <vm:SpellSelectionWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <TextBlock Text="Select Available Spells" 
                       FontWeight="Bold" 
                       FontSize="16"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Maps will only be shown if they have ALL selected spells available"
                       FontSize="12"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
            <Separator/>
        </StackPanel>

        <!-- Spell List -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource SystemAccentColor}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding SpellFilters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Spell, Converter={x:Static converters:SpellTypeConverter.Instance}}"
                                      IsChecked="{Binding IsSelected}"
                                      Margin="0,3"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="Auto,Auto,*,Auto"
              Margin="0,10,0,0">
            <Button Grid.Column="0"
                    Content="Select All"
                    Command="{Binding SelectAllCommand}"
                    Margin="0,0,5,0"
                    Width="100"/>
            <Button Grid.Column="1"
                    Content="Clear All"
                    Command="{Binding ClearAllCommand}"
                    Margin="0,0,5,0"
                    Width="100"/>
            <Button Grid.Column="3"
                    Content="Apply"
                    Click="OnApplyClick"
                    Width="100"/>
        </Grid>
    </Grid>
</Window>
