<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Heroes3MapReader.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Heroes3MapReader.UI.Converters"
        xmlns:views="clr-namespace:Heroes3MapReader.UI.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="Heroes3MapReader.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Heroes 3 Map Browser v1.5.0"
        Width="1200"
        Height="700">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="TextBox.selectableLabel">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CaretBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style Selector="TextBox.selectableLabel:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Directory Selection -->
        <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <TextBlock Text="Map Directory" FontWeight="Bold" FontSize="14"/>
            <Grid ColumnDefinitions="*,Auto,Auto">
                <TextBox Grid.Column="0"
                         Text="{Binding DirectoryPath}"
                         Watermark="Enter path to maps directory (e.g., C:\Games\Heroes3\Maps)"
                         Margin="0,0,5,0"/>
                <Button Grid.Column="1"
                        Content="Browse..."
                        Command="{Binding BrowseDirectoryCommand}"
                        Margin="0,0,5,0"
                        Width="80"/>
                <Button Grid.Column="2"
                        Content="Load Maps"
                        Command="{Binding LoadMapsCommand}"
                        IsEnabled="{Binding CanLoadMaps}"
                        Width="100"/>
            </Grid>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="250,10,*,10,400">
            <!-- Filters Panel -->
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource SystemAccentColor}"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0"
                    CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel Spacing="15">
                    <TextBlock Text="Filters" FontWeight="Bold" FontSize="16"/>

                    <!-- Player Count Filter -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Player Count" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding PlayerCounts}"
                                  SelectedItem="{Binding SelectedPlayerCount}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource NullableIntConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Team Count Filter -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Team Count" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding TeamCounts}"
                                  SelectedItem="{Binding SelectedTeamCount}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource NullableIntConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Difficulty Filter -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Difficulty" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding Difficulties}"
                                  SelectedItem="{Binding SelectedDifficulty}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource NullableEnumConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Victory Condition Filter -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Victory Condition" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding VictoryConditions}"
                                  SelectedItem="{Binding SelectedVictoryCondition}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource VictoryConditionConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Map Format Filter -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Map Format" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding MapFormats}"
                                  SelectedItem="{Binding SelectedFormat}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource MapFormatConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Has Underground Filter -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Has Underground" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding HasUndergroundOptions}"
                                  SelectedItem="{Binding SelectedHasUnderground}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource NullableBoolConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Map Size Filter -->
                    <views:MapSizeFilterControl MapSizeFilters="{Binding MapSizeFilters}" />

                    <!-- Faction Filter -->
                    <Expander IsExpanded="False"
                              Classes="compact"
                              Background="Transparent"
                              Margin="0,-10,0,-10"
                              HorizontalAlignment="Stretch"
                              ToolTip.Tip="Map must allow human player to play as ALL selected factions">
                        <Expander.Header>
                            <TextBlock Text="Playable Factions" FontWeight="SemiBold"/>
                        </Expander.Header>
                        <ItemsControl ItemsSource="{Binding FactionFilters}" Margin="0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              IsChecked="{Binding IsSelected}"
                                              Margin="0,-2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!-- Available Spells Filter -->
                    <StackPanel Spacing="5" Margin="0 5 0 0">
                        <TextBlock Text="Available Spells" FontWeight="SemiBold"/>
                        <Button Command="{Binding OpenSpellSelectionCommand}"
                                CommandParameter="{Binding $parent[Window]}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                ToolTip.Tip="Map must have ALL selected spells available">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="Select Spells"/>
                                <TextBlock Text="{Binding SelectedSpellCount, StringFormat='({0})'}"
                                           IsVisible="{Binding SelectedSpellCount}"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource SystemAccentColor}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Clear Filters Button -->
                    <Button Content="Clear All Filters"
                            Command="{Binding ClearFiltersCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0,5,0,0"/>
                </StackPanel>
                </ScrollViewer>
            </Border>

            <GridSplitter Grid.Column="1" Width="10" ResizeBehavior="PreviousAndNext" Background="Transparent"/>

            <!-- Map List -->
            <Border Grid.Column="2"
                    BorderBrush="{DynamicResource SystemAccentColor}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="0">
                <DataGrid ItemsSource="{Binding FilteredMaps}"
                          SelectedItem="{Binding SelectedMap}"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          AutoGenerateColumns="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Map Name"
                                            Binding="{Binding Map.Name}"
                                            Width="*"
                                            MinWidth="200"/>
                        <DataGridTextColumn Header="Format"
                                            Binding="{Binding Map.Format, Converter={StaticResource MapFormatConverter}, Mode=OneWay}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Size"
                                            Binding="{Binding Map.Size}"
                                            Width="80"
                                            SortMemberPath="Map.Size"/>
                        <DataGridTextColumn Header="Players"
                                            Binding="{Binding Map.PlayerCount}"
                                            Width="70"/>
                        <DataGridTextColumn Header="Teams"
                                            Binding="{Binding Map.TeamCount}"
                                            Width="70"/>
                        <DataGridTextColumn Header="Difficulty"
                                            Binding="{Binding Map.Difficulty}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Victory"
                                            Binding="{Binding Map.VictoryCondition.Type, Converter={StaticResource VictoryConditionConverter}, Mode=OneWay}"
                                            Width="150" />
                        <DataGridTextColumn Width="90"
                                            SortMemberPath="Map.Width">
                            <DataGridTextColumn.Header>
                                Size (tiles)
                            </DataGridTextColumn.Header>
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0}x{1}">
                                    <Binding Path="Map.Width" />
                                    <Binding Path="Map.Height" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridCheckBoxColumn Header="Underground"
                                                Binding="{Binding Map.HasUnderground}"
                                                Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <GridSplitter Grid.Column="3" Width="10" ResizeBehavior="PreviousAndNext" Background="Transparent"/>

            <!-- Visualization Panel -->
            <Border Grid.Column="4"
                    BorderBrush="{DynamicResource SystemAccentColor}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Text="Map Visualization"
                               Grid.Row="0"
                               FontWeight="Bold"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <Border Grid.Row="1"
                            IsVisible="{Binding SelectedMap, Converter={x:Static ObjectConverters.IsNull}}"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            Padding="20"
                            CornerRadius="5"
                            VerticalAlignment="Top">
                        <TextBlock Text="Select a map to view its minimap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </Border>

                    <Grid Grid.Row="1"
                          IsVisible="{Binding SelectedMap, Converter={x:Static ObjectConverters.IsNotNull}}"
                          RowDefinitions="120,5,*">

                        <!-- Map Info -->
                        <Grid Grid.Row="0" RowDefinitions="Auto,*">
                            <TextBox Grid.Row="0"
                                     Classes="selectableLabel"
                                     Text="{Binding SelectedMap.Map.Name}"
                                     FontWeight="Bold"
                                     FontSize="14"
                                     Margin="0,0,0,0"/>
                            <TextBox Grid.Row="1"
                                     Classes="selectableLabel"
                                     Text="{Binding SelectedMap.Map.Description}"
                                     IsVisible="{Binding SelectedMap.Map.Description, Converter={x:Static ObjectConverters.IsNotNull}}"
                                     Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
                        </Grid>

                        <GridSplitter Grid.Row="1"
                                      ResizeDirection="Rows"
                                      Background="Transparent"
                                      HorizontalAlignment="Stretch"
                                      Height="12"
                                      MinHeight="12">
                            <GridSplitter.Template>
                                <ControlTemplate>
                                    <Grid Background="{TemplateBinding Background}">
                                        <Border VerticalAlignment="Center"
                                                Height="1"
                                                Background="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                                    </Grid>
                                </ControlTemplate>
                            </GridSplitter.Template>
                        </GridSplitter>

                        <ScrollViewer Grid.Row="2"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="10">
                                <!-- Minimap -->
                                <StackPanel Spacing="5">
                                    <TextBlock Text="Minimap" FontWeight="SemiBold"/>
                                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            HorizontalAlignment="Center">
                                        <Image Source="{Binding MinimapImage, Converter={StaticResource ByteArrayToImageConverter}}"
                                               Stretch="Uniform"
                                               MaxWidth="360"
                                               MaxHeight="400"
                                               IsVisible="{Binding MinimapImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                    </Border>
                                    <TextBlock Text="Loading minimap..."
                                               HorizontalAlignment="Center"
                                               IsVisible="{Binding MinimapImage, Converter={x:Static ObjectConverters.IsNull}}"/>
                                </StackPanel>

                                <!-- Map Stats -->
                                <StackPanel Spacing="5" Margin="0 0 0 -10">
                                    <TextBlock Text="Map Details" FontWeight="SemiBold"/>
                                    <Grid ColumnDefinitions="Auto,10,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Size:" FontWeight="Medium" Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding SelectedMap.Map.Size}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Format:" FontWeight="Medium" Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding SelectedMap.Map.Format, Converter={StaticResource MapFormatConverter}}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Dimensions:" FontWeight="Medium" Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="2" Margin="0,0,0,5">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}x{1}">
                                                    <Binding Path="SelectedMap.Map.Width"/>
                                                    <Binding Path="SelectedMap.Map.Height"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Players:" FontWeight="Medium" Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding SelectedMap.Map.PlayerCount}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Difficulty:" FontWeight="Medium" Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding SelectedMap.Map.Difficulty}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Underground:" FontWeight="Medium" Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="5" Grid.Column="2" Text="{Binding SelectedMap.Map.HasUnderground}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="File Path:" FontWeight="Medium" Margin="0,0,0,5"/>
                                        <TextBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3"
                                                 Classes="selectableLabel"
                                                 Text="{Binding SelectedMap.FilePath}"
                                                 Margin="0,0,0,5"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Playable Factions -->
                                <views:PlayableFactionsControl Margin="0 0 0 -10" Factions="{Binding PlayableFactions}" />

                                <!-- Banned Spells -->
                                <views:BannedSpellsControl Spells="{Binding BannedSpells}" />
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemAccentColor}"
                Padding="10,5"
                Margin="0,10,0,0"
                CornerRadius="3">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1"
                             IsIndeterminate="True"
                             IsVisible="{Binding IsLoading}"
                             Width="100"
                             Height="20"/>
            </Grid>
        </Border>
    </Grid>
</Window>

